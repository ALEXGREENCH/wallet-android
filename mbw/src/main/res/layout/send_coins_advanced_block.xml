<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/send_coins_activity_eth">

    <data>

        <variable
            name="activity"
            type="com.mycelium.wallet.activity.send.SendCoinsActivity" />

        <variable
            name="viewModel"
            type="com.mycelium.wallet.activity.send.model.SendEthViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAdvancedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{_ -> viewModel.expandCollapseAdvancedBlock()}"
                android:text="@string/advanced"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/expand"
                imageRotation="@{viewModel.isAdvancedBlockExpanded}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{_ -> viewModel.expandCollapseAdvancedBlock()}"
                android:padding="4dp"
                android:src="@drawable/ic_expand_more_white_24dp" />
        </LinearLayout>

        <include
            layout="@layout/send_coins_advanced_eth"
            bind:activity="@{activity}"
            bind:viewModel="@{viewModel}" />
    </LinearLayout>
</layout>